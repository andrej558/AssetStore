@model AssetStore.Models.ApplicationUser

    <div>
        <h4>@Model.UserName</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.EmailConfirmed)
            </dt>

            <dd>
                @{ 
                    if(Model.EmailConfirmed == true)
                    {
                        <span>
                            Yes
                        </span>
                    }
                    else
                    {
                        <span>
                            No
                        </span>
                    }
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PasswordHash)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PasswordHash)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SecurityStamp)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SecurityStamp)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>

            <dd>
                @{
                    if(Model.PhoneNumber == null)
                    {
                        <span>Not specified.</span>
                    }
                    else
                    {
                        <span>@Model.PhoneNumber</span>
                    }
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PhoneNumberConfirmed)
            </dt>

            <dd>
                @{
                    if (Model.PhoneNumberConfirmed == true)
                    {
                        <span>
                            Yes
                        </span>
                    }
                    else
                    {
                        <span>
                            No
                        </span>
                    }
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TwoFactorEnabled)
            </dt>

            <dd>
                @{
                    if (Model.TwoFactorEnabled == true)
                    {
                        <span>
                            Yes
                        </span>
                    }
                    else
                    {
                        <span>
                            No
                        </span>
                    }
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LockoutEndDateUtc)
            </dt>

            <dd>
                @{
                    if (Model.LockoutEndDateUtc == null)
                    {
                        <span>N/A</span>
                    }
                    else
                    {
                        <span>@Model.PhoneNumber</span>
                    }
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LockoutEnabled)
            </dt>

            <dd>
                @{
                if (Model.LockoutEnabled == true)
                {
                <span>
                    Yes
                </span>
                }
                else
                {
                <span>
                    No
                </span>
                }
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AccessFailedCount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AccessFailedCount)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
        </dl>
        <button class="btn btn-success" onclick="location.href='@Url.Action("ChangeUserPass", new { Id = Model.Id});'"> 
            Change Password
        </button>
    </div>
